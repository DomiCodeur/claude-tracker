#!/bin/bash

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
cd "$SCRIPT_DIR"

echo "ü§ñ Claude Tracker"
echo "=================="
echo ""
echo "Choisissez la version √† utiliser :"
echo ""
echo "1) Version Node.js (recommand√©e)"
echo "2) Version Python (alternative)"
echo "3) Quitter"
echo ""

read -p "Votre choix [1-3]: " choice

case $choice in
    1)
        echo ""
        echo "Lancement de la version Node.js..."
        ./scripts/run_nodejs_tracker.sh
        ;;
    2)
        echo ""
        echo "Lancement de la version Python..."
        ./scripts/run_tracker.sh
        ;;
    3)
        echo "Au revoir !"
        exit 0
        ;;
    *)
        echo "Choix invalide. Lancement de la version Node.js par d√©faut..."
        ./scripts/run_nodejs_tracker.sh
        ;;
esac